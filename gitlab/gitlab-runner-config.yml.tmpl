apiVersion: v1
kind: ConfigMap
metadata:
  labels:
    k8s-app: gitlab-runner
  name: gitlab-runner-config
  namespace: gitlab
data:
  config.toml: |
    concurrent = 4

    [[runners]]
      name = "Kubernetes Runner"
      url = "https://gitlab.tech.dreamhack.se/"
      token = "TOOD_FILL_ME_IN"  # Run gitlab-runner register and extract
      executor = "kubernetes"
      [runners.kubernetes]
        namespace = "gitlab"
        image = "busybox"
